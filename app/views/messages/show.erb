<p>
  Author: <%= @message.author %>
</p>

<p>
  <%= @message.content  %>
</p>

<!-- how do links work? -->
<a href= "<%= @message.url  %>" ><%= @message.url  %></a> 

<p>
  <%= @message.created_at %>
</p>


<% posts = Message.where( author: @message.author ) %>

<% posts.each do |message| %>

  <div class="message">
    <h3><a href="/messages/<%= message.id %>"><small>(by: <%= message.author %>)</small></a> </h3>
    <p>
      <%= message.content %>
    </p>
    <p>
      <%= message.url %>
    </p>

    <p>
      <%= message.created_at %>
    </p>

  </div>
<% end %>

<hr/>
<a href="/messages">Back to All Messages</a>
